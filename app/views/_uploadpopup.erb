<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
  <style>
    body { font-size: 62.5%; }
    label, input { display:block; }
    input.text { margin-bottom:12px; width:95%; padding: .4em; }
    fieldset { padding:0; border:0; margin-top:25px; }
    h1 { font-size: 1.2em; margin: .6em 0; }
    div.users-contain { width: 350px; margin: 20px 0; }
    div.users-contain table { margin: 1em 0; border-collapse: collapse; width: 100%; }
    div.users-contain table td, div#users-contain table th { border: 1px solid #eee; padding: .6em 10px; text-align: left; }
    .ui-dialog .ui-state-error { padding: .3em; }
    .validateTips { border: 1px solid transparent; padding: 0.3em; }
  </style>

</head>
  <body>
    <div id="dialog-form" title="Upload a Photo">
      <p class="validateTips">Only a photo is required!</p>
      <form name="Upload Photo" method="POST">
        <fieldset>
          <label for="photo">Photo</label>
          <input type="file" name="photo" id="photo" value="xxxxxxx" class="file ui-widget-content ui-corner-all"><br>
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="Want to name the photo?" class="text ui-widget-content ui-corner-all">
          <label for="email">Location</label>
          <input type="text" name="location" id="location" value="Where was this taken?" class="text ui-widget-content ui-corner-all">
          <!-- Allow form submission with keyboard without duplicating the dialog button -->
          <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
        </fieldset>
      </form>
    </div>
  </body>
</html>