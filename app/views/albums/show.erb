<!-- show a single album with it's photos -->
<h1 class ="title"><%= @album.name %></h1>
<!-- button for editing -->

<% if album_owner?(@album) %>
  <form action="<%= album_url(@album) %>/edit" method="GET">
    <input type="submit" name="GET" value="Edit">
  </form>

  <form action="<%= album_url(@album) %>/delete" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
  </form>
<% end %>

<% @photos.each do |photo| %>
  <div class="box">
	<div class = "boxInner"> <img class ="cover" src="data:image/png;base64,<%= encode(photo) %>"/>
	<div class ="titleBox"><a href="<%= photo_url(photo) %>"> <%= photo.name %></a></div>
	</div>
  </div>
<%end%>

